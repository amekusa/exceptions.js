{
  "plugins": [
    "plugins/markdown"
  ],
  "sourceType": "module",
  "source": {
    "include": ["src", "package.json", "README.md"],
    "includePattern": ".js$"
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    },
    "docolatte": {
      "branding": {
        "title": "exceptions.js",
        "link": "https://github.com/amekusa/exceptions.js",
        "icon": "github",
        "font": {
          "size": ".75em"
        }
      },
      "footer": {
        "copyright": "&copy; 2023 Satoshi Soma (<a href=\"https://amekusa.com\">amekusa.com</a>)"
      }
    }
  },
  "opts": {
    "destination": "./docs/",
    "template": "node_modules/docolatte",
    "encoding": "utf8",
    "recurse": true
  },
  "markdown": {
    "hardwrap": true
  }
}
